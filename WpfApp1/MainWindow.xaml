<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Define the Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="155" />
            <!-- Top row -->
            <RowDefinition Height="Auto" />
            <!-- Row for GridSplitter -->
            <RowDefinition Height="*" />
            <!-- Bottom row -->
        </Grid.RowDefinitions>

        <!-- Content for the Top Row -->
        <Border Grid.Row="0" Background="LightBlue">
            <TextBlock Text="Top RowW" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Horizontal GridSplitter -->
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Gray"/>

        <!-- Content for the Bottom Row -->
        <Border Grid.Row="2" Background="LightGreen">
            <TextBlock Text="Bottom Row" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
